{
  "name": "comment-overlay",
  "version": "1.0.0",
  "description": "Slack thread comments overlay on Desktop",
  "license": "MIT",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "electron:build": "tsc -p tsconfig.electron.json && cp electron/package.json dist/electron/",
    "electron": "npm run electron:build && electron dist/electron/main.js",
    "dev:overlay": "./scripts/dev-overlay.sh",
    "encrypt-env": "./scripts/encrypt-env.sh",
    "decrypt-env": "./scripts/decrypt-env.sh",
    "pack": "npm run build && npm run electron:build && electron-builder --dir",
    "dist": "npm run build && npm run electron:build && electron-builder",
    "dist:mac": "npm run build && npm run electron:build && electron-builder --mac",
    "dist:win": "npm run build && npm run electron:build && electron-builder --win"
  },
  "dependencies": {
    "@slack/bolt": "^4.6.0",
    "dotenv": "^16.3.0",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.9",
    "emoji-datasource": "^16.0.0",
    "express": "^4.18.0",
    "helmet": "^8.1.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/ws": "^8.18.1",
    "concurrently": "^9.2.1",
    "electron": "^35.7.5",
    "electron-builder": "^25.1.8",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "build": {
    "appId": "com.example.comment-overlay",
    "productName": "Comment Overlay",
    "directories": {
      "output": "release",
      "buildResources": "build-resources"
    },
    "files": [
      "dist/**/*",
      "public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "scripts/",
        "to": "scripts/",
        "filter": ["decrypt-env.sh", "encrypt-env.sh"]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        }
      ],
      "icon": "build-resources/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build-resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  }
}
